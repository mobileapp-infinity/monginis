<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_veg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <com.infinity.monginis.custom_class.TextViewMediumFont
                            android:id="@+id/tvCartItemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Chocolate Vanila "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_14sp" />

                        <com.infinity.monginis.custom_class.TextViewRegularFont
                            android:id="@+id/tvSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="8dp"
                            android:text="Large"
                            android:textSize="@dimen/text_12sp" />

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spCustomize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llAddMoreItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_outlined_shape"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:padding="3dp"
                            android:src="@drawable/ic_add"
                            android:tint="@color/colorPrimary"
                            android:visibility="invisible" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:padding="3dp"
                            android:maxLength="5"
                            android:editable="false"
                            android:focusable="false"
                            android:text="1"
                            android:textColor="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:padding="3dp"
                            android:src="@drawable/ic_minus"
                            android:tint="@color/colorPrimary"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <com.infinity.monginis.custom_class.TextViewMediumFont
                        android:id="@+id/tvItemPrice"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Rs.200"
                        android:visibility="invisible"
                        android:textColor="@android:color/black"

                        android:textSize="@dimen/text_14sp" />




                </LinearLayout>

            </LinearLayout>
            <com.infinity.monginis.custom_class.TextViewMediumFont


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Rs.200"
                android:visibility="visible"
                android:textColor="@android:color/black"

                android:textSize="@dimen/text_14sp" />






        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>