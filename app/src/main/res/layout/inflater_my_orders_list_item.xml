<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
   android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.infinity.monginis.custom_class.TextViewRegularFont
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monginis"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_14sp" />

            <com.infinity.monginis.custom_class.TextViewRegularFont
                android:id="@+id/tvOrderItemPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Rs.400"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_14sp" />


        </LinearLayout>

        <com.infinity.monginis.custom_class.TextViewRegularFont
            android:id="@+id/tvCityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Rajkot"
            android:textSize="@dimen/text_14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <View
                android:id="@+id/line"
                android:layout_width="50dp"
                android:layout_height="0.6dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray" />

            <com.infinity.monginis.custom_class.TextViewRegularFont
                android:id="@+id/tvItemName"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Chocolate Vanila"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_14sp" />

            <com.infinity.monginis.custom_class.TextViewRegularFont
                android:id="@+id/tvOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="25/1/2021"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.infinity.monginis.custom_class.TextViewMediumFont
                android:id="@+id/tvViewOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_outlined_shape_bold"
                android:padding="8dp"
                android:text="View Order"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

            <com.infinity.monginis.custom_class.TextViewMediumFont
                android:id="@+id/tvCancelOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/common_outlined_shape_bold"
                android:padding="8dp"
                android:text="Cancel Order"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <View
            android:id="@+id/vFooter"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_margin="8dp"

            android:background="@color/gray" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>