<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_margin="14dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.infinity.monginis.custom_class.TextViewMediumFont
                android:layout_width="match_parent"
                android:text="Home"

                android:id="@+id/tvAddressLine1"
                android:textSize="@dimen/text_14sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"/>

            <com.infinity.monginis.custom_class.TextViewRegularFont
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:id="@+id/tvAddressLine2"

                android:text="'Vatshaly', Sardar Nagar str.no 5,"
                android:textSize="@dimen/text_12sp"

                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.infinity.monginis.custom_class.TextViewMediumFont
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvEdit"
                    android:text="Edit"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/common_outlined_shape_bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

                <com.infinity.monginis.custom_class.TextViewMediumFont
                    android:background="@drawable/common_outlined_shape_bold"
                    android:padding="8dp"
                    android:id="@+id/tvDelete"
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Delete"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:id="@+id/vFooter"
                android:layout_height="0.6dp"
                android:layout_marginTop="14dp"
                android:background="@color/gray" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>