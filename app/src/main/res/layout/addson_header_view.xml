<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"


    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:background="@drawable/bg_shape_expendable_heder"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">


        <com.infinity.monginis.custom_class.TextViewMediumFont
            android:layout_width="match_parent"
            android:text="Adds On Header"
            android:padding="4dp"


            android:gravity="center_vertical"
            android:id="@+id/tvAddsOnCategoryName"
          android:layout_marginLeft="4dp"



            android:drawableRight="@drawable/ic_baseline_expand_more_24"
            android:drawableTint="@android:color/white"
            android:textSize="@dimen/text_12sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>