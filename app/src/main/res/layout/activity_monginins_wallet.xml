<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.activity.MongininsWalletActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_shape_for_back_button"
                    android:padding="10dp"
                    android:src="@drawable/ic_back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1.7"
                    android:gravity="center">

                    <com.infinity.monginis.custom_class.TextViewMediumFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monginis Wallet"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_18sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_shape_confirm_order"
                android:orientation="vertical"
                android:padding="18dp">

                <com.infinity.monginis.custom_class.TextViewRegularFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Current Cash Balance"

                    android:textSize="@dimen/text_14sp" />



                    <com.infinity.monginis.custom_class.TextViewRegularFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:id="@+id/tvCurrentBalance"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Rs.400"

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />

                <View
                   android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@android:color/darker_gray" />


                <LinearLayout
                    android:weightSum="1"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.infinity.monginis.custom_class.TextViewRegularFont

                        android:textSize="@dimen/text_14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Soft Limit :" />

                    <com.infinity.monginis.custom_class.TextViewRegularFont

                        android:textSize="@dimen/text_14sp"

                        android:id="@+id/tvSoftLimitPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Rs.200.55"
                        android:textColor="@android:color/holo_green_light" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:weightSum="1"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.infinity.monginis.custom_class.TextViewRegularFont

                        android:textSize="@dimen/text_14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Hard Limit :" />

                    <com.infinity.monginis.custom_class.TextViewRegularFont
                        android:id="@+id/tvHardLimitPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Rs.200.55"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@android:color/holo_red_light" />

                </LinearLayout>



             <com.infinity.monginis.custom_class.TextViewRegularFont
                 android:layout_width="match_parent"
                 android:text="Recent Transaction"
                 android:gravity="center"
                 android:textColor="@android:color/black"
                 android:layout_marginTop="22dp"
                 android:textSize="@dimen/text_14sp"
                 android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_shape_confirm_order"
                android:orientation="vertical"
                android:padding="18dp">

                <com.infinity.monginis.custom_class.TextViewMediumFont
                    android:layout_width="match_parent"
                    android:text="Pay Using Card"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"/>

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:weightSum="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:src="@drawable/ic_payment_card_medium"
                        android:layout_height="24dp"/>


                    <com.infinity.monginis.custom_class.TextViewRegularFont
                        android:layout_width="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_height="wrap_content"


                        android:layout_weight="1"

                        android:textColor="@android:color/black"
                        android:text="Add New Card"

                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>

                <com.infinity.monginis.custom_class.TextViewRegularFont
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_18sp"
                  android:textColor="@android:color/black"
                    android:layout_weight="1"

                    android:text="Add Money"

                    />

                <LinearLayout
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:textSize="@dimen/text_14sp"
                        android:hint="Amount ( Rs. )"
                        android:layout_height="wrap_content"/>

                    <com.infinity.monginis.custom_class.TextViewRegularFont
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Have A Voucher Code ?"
                        android:gravity="center"
                        android:textSize="@dimen/text_14sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <com.infinity.monginis.custom_class.TextViewRegularFont
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:text="Soft Limit :"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>

                    <com.infinity.monginis.custom_class.TextViewRegularFont
                        android:layout_width="0dp"
                        android:layout_weight="1.6"
                        android:text="About Reach Maximum Cash Credit Limit"
                        android:textSize="@dimen/text_12sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="8dp"

                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <com.infinity.monginis.custom_class.TextViewRegularFont
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:text="Hard Limit:"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>

                    <com.infinity.monginis.custom_class.TextViewRegularFont
                        android:layout_width="0dp"
                        android:layout_weight="1.6"
                        android:textSize="@dimen/text_12sp"
                        android:text="About Reach Maximum Cash Credit Limit"

                        android:layout_height="wrap_content"/>
                </LinearLayout>




            </LinearLayout>


            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:text="Add Money"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>